# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# JWT Secret - Generate a strong random secret for production
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production



# PostgreSQL Database Configuration
DATABASE_URL=postgresql://Imang:johnpostgre@localhost:5432/self_claim_db

# PostgreSQL Connection Details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=self_claim_db
POSTGRES_USER=Imang
POSTGRES_PASSWORD=johnpostgre

# Admin Configuration
FORCE_ADMIN_PASSWORD_CHANGE=true
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=password

# Password Validation Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Strict Rate Limiting (for sensitive endpoints like login)
STRICT_RATE_LIMIT_WINDOW_MS=900000
STRICT_RATE_LIMIT_MAX_REQUESTS=10

# Application Configuration
NODE_ENV=development
PORT=3000

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_HOURS=24

# Logging and Monitoring Configuration
LOG_LEVEL=info
APP_VERSION=1.0.0
SERVER_NAME=self-claim-link-server

# Sentry Configuration (Optional - for error tracking and performance monitoring)
# Sign up at https://sentry.io and create a new project to get these values
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn_here

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
